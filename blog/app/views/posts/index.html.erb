<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<script>
var average= null;
var x;
  <% @posts.each do |post| %>
    if (average[<% post.age %>]=null)
    {
      x=1;
    }
    else
    {
      x=2;
    }
    average[<% post.age %>]+= <% post.sleephours %>;
    average[<% post.age %>] = average[<% post.age %>]/x;
    console.log(average);
  <% end %>
</script>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Hours of sleep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.age %></td>
        <td><%= post.sleephours %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you really such an asshole?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

